{
  "name": "ts-node-esbuild-starterpack",
  "version": "1.0.0",
  "description": "typescript project starterpack for node environment, powered with esbuild",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --packages=external",
    "start": "node dist/index.js",
    "dev": "npx tsx watch src/index.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.5",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  }
}
